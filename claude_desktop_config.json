{
  "mcpServers": {
    "coach-ai": {
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "/absolute/path/to/coach-ai",
        "python",
        "-m",
        "coach_ai.server"
      ],
      "env": {
        "OBSIDIAN_VAULT_PATH": "/Users/your-username/Documents/ObsidianVault",
        "DAILY_NOTES_FORMAT": "Daily Notes/{date}.md"
      }
    }
  }
}
